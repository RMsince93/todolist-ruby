
<table class="table table-bordered">

  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="bg-dark">
          <td class="striker"><%= link_to list.description, edit_list_path(list) %> <% list.description %> </td>
            <td> 
              <% link_to "Show", list %>
              <% link_to "Edit", edit_list_path(list) %>
              <center>
              <%= link_to "Delete", list, class:"btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              </center> 
            </td>
        </tr>
      <% else %>
        <tr>
          <td> <%= link_to list.description, edit_list_path(list) %> <% list.description %> </td>
            <td> 
              <% link_to "Show", list %>
              <% link_to "Edit", edit_list_path(list) %>
              <center>
                <%= link_to "Delete", list, class:"btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              </center>
            </td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

